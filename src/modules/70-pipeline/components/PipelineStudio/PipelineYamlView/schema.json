{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "enum": ["Java with Maven", "Java with Gradle"]
    },
    "stages": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "steps": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "spec": {
                      "type": "object",
                      "properties": {
                        "run": {
                          "type": "string"
                        }
                      },
                      "required": ["run"]
                    }
                  },
                  "required": ["name", "type", "spec"]
                },
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "spec": {
                      "type": "object",
                      "properties": {
                        "language": {
                          "type": "string"
                        },
                        "build_tool": {
                          "type": "string"
                        },
                        "build_args": {
                          "type": "string"
                        },
                        "test_reports": {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string"
                            },
                            "paths": {
                              "type": "array",
                              "items": [
                                {
                                  "type": "string"
                                }
                              ]
                            }
                          },
                          "required": ["type", "paths"]
                        },
                        "strategy": {
                          "type": "object",
                          "properties": {
                            "parallelism": {
                              "type": "integer"
                            }
                          },
                          "required": ["parallelism"]
                        }
                      },
                      "required": ["language", "build_tool", "build_args", "test_reports", "strategy"]
                    }
                  },
                  "required": ["name", "type", "spec"]
                }
              ]
            }
          },
          "required": ["name", "type", "steps"]
        }
      ]
    }
  },
  "required": ["name", "stages"]
}
