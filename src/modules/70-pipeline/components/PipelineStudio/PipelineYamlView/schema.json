{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "enum": ["Java with Maven", "Java with Gradle"]
    },
    "version": {
      "type": "integer"
    },
    "stages": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "spec": {
              "type": "object",
              "properties": {
                "clone": {
                  "type": "object",
                  "properties": {
                    "disabled": {
                      "type": "boolean"
                    }
                  },
                  "required": ["disabled"]
                },
                "steps": {
                  "type": "array",
                  "items": [
                    {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        },
                        "spec": {
                          "type": "object",
                          "properties": {
                            "run": {
                              "type": "string"
                            }
                          }
                        }
                      },
                      "required": ["name", "type", "spec"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        },
                        "spec": {
                          "type": "object",
                          "properties": {
                            "language": {
                              "type": "string"
                            },
                            "build_tool": {
                              "type": "string"
                            },
                            "build_args": {
                              "type": "string"
                            },
                            "strategy": {
                              "type": "object",
                              "properties": {
                                "parallelism": {
                                  "type": "integer"
                                }
                              },
                              "required": ["parallelism"]
                            }
                          }
                        }
                      },
                      "required": ["name", "type", "spec"]
                    }
                  ]
                }
              },
              "required": ["steps"]
            }
          },
          "required": ["name", "type", "spec"]
        }
      ]
    }
  },
  "required": ["name", "version", "stages"]
}
